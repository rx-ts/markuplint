{
  "name": "@unts/markuplint",
  "version": "0.0.0",
  "description": "Incredible markuplint plugins, make markuplint greater.",
  "repository": "git+https://github.com/un-ts/markuplint.git",
  "author": "JounQin (https://www.1stG.me) <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -f es2019",
    "build:ts": "tsc -b",
    "clean": "rimraf packages/*/{lib,*.tsbuildinfo}",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly --max-warnings 10",
    "lint:tsc": "tsc --noEmit",
    "prepare": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "jest",
    "typecov": "type-coverage"
  },
  "devDependencies": {
    "@1stg/lib-config": "^8.0.0",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.1",
    "@markuplint/rule-textlint": "^2.5.3",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "markuplint": "^2.9.0",
    "snapshot-diff": "^0.9.0",
    "ts-jest": "^28.0.5",
    "type-coverage": "^2.21.2",
    "typescript": "^4.7.4"
  },
  "resolutions": {
    "prettier": "^2.7.1"
  },
  "commitlint": {
    "extends": "@1stg"
  },
  "eslintConfig": {
    "extends": "@1stg",
    "rules": {
      "regexp/strict": "off"
    }
  },
  "eslintIgnore": [
    "coverage",
    "lib",
    "CHANGELOG.md",
    "packages/*/test/fixtures",
    "!/.*.js"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/packages/sync/rules"
    ],
    "moduleNameMapper": {
      "^markuplint-angular-parser$": "<rootDir>/packages/angular-parser/src"
    }
  },
  "prettier": "@1stg/prettier-config",
  "remarkConfig": {
    "plugins": [
      "@1stg/config"
    ]
  },
  "renovate": {
    "extends": [
      "@1stg"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreCatch": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "strict": true,
    "update": true
  }
}
